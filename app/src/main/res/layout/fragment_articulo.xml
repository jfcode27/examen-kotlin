<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#E9F0FB"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentArticulo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btnNext2"
            android:layout_width="55dp"
            android:layout_height="51dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="476dp"
            android:src="@drawable/next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.943"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivEscArt"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/btnPrevious2"
            android:layout_width="55dp"
            android:layout_height="51dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="476dp"
            android:src="@drawable/previous"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivEscArt"
            app:layout_constraintVertical_bias="0.005" />

        <ImageView
            android:id="@+id/btnLike"
            android:layout_width="73dp"
            android:layout_height="71dp"
            android:src="@drawable/like"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.047"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.024" />

        <TextView
            android:id="@+id/txtLikesArt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Likes"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.313"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="44dp" />

        <ImageView
            android:id="@+id/artImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/art31"
            tools:layout_editor_absoluteX="75dp"
            tools:layout_editor_absoluteY="128dp" />

        <EditText
            android:id="@+id/artContent"
            android:layout_width="310dp"
            android:layout_height="164dp"
            android:hint="Content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/artTitle"
            app:layout_constraintVertical_bias="0.299" />

        <EditText
            android:id="@+id/artTitle"
            android:layout_width="318dp"
            android:layout_height="42dp"
            android:hint="Title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/artImage"
            app:layout_constraintVertical_bias="0.299" />

        <Button
            android:id="@+id/btnAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CRUD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/artContent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>